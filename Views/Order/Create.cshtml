@model ProjectCare01.Models.Order

@{
    ViewData["Title"] = "Create";
}

<h1>Create Order</h1>
<hr />
<body style="background-color: #f7f2ef">
    <nav class="navbar navbar-expand-lg navbar-light" style="background-color: #c4aca5;">
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
            <div class="navbar-nav">
                <a class="nav-item nav-link active" href="~/Home/Index">Home <span class="sr-only">(current)</span></a>
            </div>
        </div>
    </nav>
    <div class="row">
        <div class="col" style="background-color:#f7f2ef; text-align:center;">
            <div class="container p-3 my-3 bg-secondary text-dark">
                <center>
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="OrderName" class="control-label"></label>
                            <input asp-for="OrderName" class="form-control" />
                            <span asp-validation-for="OrderName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Description" class="control-label"></label>
                            <textarea asp-for="Description" class="form-control"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Price" class="control-label"></label>
                            <input asp-for="Price" class="form-control" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Type" class="control-label"></label>
                            <select asp-for="Type" class="form-control" asp-items="Html.GetEnumSelectList<Order.OrderType>()"></select>
                            <span asp-validation-for="Type" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-success" />
                        </div>

                    </form>

                </center>
            </div>
        </div>
    </div>
    </body>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
